{
  "version": 2,
  "name": "sk4film-website",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/search",
      "dest": "/search.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "mkdir -p dist && cp *.html dist/ && cp -r assets dist/ 2>/dev/null || true",
  "outputDirectory": "dist"
}
